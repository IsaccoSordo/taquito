{
  "name": "@taquito/core",
  "version": "19.0.1",
  "description": "Classes, interfaces, and types shared across Taquito packages",
  "keywords": [
    "tezos",
    "blockchain"
  ],
  "main": "dist/taquito-core.js",
  "module": "dist/taquito-core.es6.js",
  "source": "src/taquito-core.ts",
  "types": "dist/types/taquito-core.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "huianyang <hui-an.yang@ecadlabs.com>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "precommit": "lint-staged",
    "prebuild": "rimraf dist",
    "version-stamp": "node ../taquito/version-stamping.js",
    "build": "microbundle",
    "start": "rollup -c rollup.config.ts --bundleConfigAsCjs -w",
    "test": "jest"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "dependencies": {
    "json-stringify-safe": "^5.0.1"
  },
  "devDependencies": {
    "@types/json-stringify-safe": "^5.0.1",
    "microbundle": "^0.15.1"
  }
}
